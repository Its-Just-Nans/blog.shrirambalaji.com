---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title text-3xl mb-6 flex flex-wrap">
			<p class="leading-10">Hello!&nbsp;</p>
			<p class="leading-10">I'm Shriram Balaji ðŸ‘‹</p>
		</h1>
		<p class="mb-4 leading-8 max-w-4xl flex flex-wrap">
			I'm a software engineer currently working on M365 at Microsoft. I usually blog about my learnings, thoughts and musings. It's a space where I express my ideas on topics I find interesting.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-8">
		<h2 class="title mb-4 text-xl">Latest Articles</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
